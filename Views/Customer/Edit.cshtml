@model Billing_Software.Models.Customer
@{
    ViewData["Title"] = "Edit Customer";
}

<!-- Compact Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h4 mb-1 fw-bold text-dark">Edit Customer</h2>
        <p class="text-muted small mb-0">Update customer information</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-pencil text-primary me-2"></i>Edit Information
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-sm" role="alert"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label small fw-medium">Full Name *</label>
                            <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter customer name">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label small fw-medium">Phone Number *</label>
                            <input asp-for="Phone" class="form-control form-control-sm" placeholder="Enter phone number">
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label small fw-medium">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Enter email address">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="City" class="form-label small fw-medium">City</label>
                            <input asp-for="City" class="form-control form-control-sm" placeholder="Enter city">
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label asp-for="Address" class="form-label small fw-medium">Address</label>
                        <textarea asp-for="Address" class="form-control form-control-sm" rows="2" placeholder="Enter full address"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="State" class="form-label small fw-medium">State/Province</label>
                            <input asp-for="State" class="form-control form-control-sm" placeholder="Enter state">
                            <span asp-validation-for="State" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="ZipCode" class="form-label small fw-medium">Zip/Postal Code</label>
                            <input asp-for="ZipCode" class="form-control form-control-sm" placeholder="Enter zip code">
                            <span asp-validation-for="ZipCode" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                            <label asp-for="IsActive" class="form-check-label small">
                                Customer is active
                            </label>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-x-circle me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="bi bi-check-circle me-2"></i>Update Customer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-info-circle text-info me-2"></i>Customer Info
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="small text-muted">Customer ID:</span>
                    <span class="small fw-medium">@Model.Id</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="small text-muted">Created:</span>
                    <span class="small">@Model.CreatedDate.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="small text-muted">Status:</span>
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") rounded-pill small">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-exclamation-triangle text-warning me-2"></i>Important Notes
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-start mb-2">
                    <i class="bi bi-telephone text-success me-2 mt-1"></i>
                    <div class="small">Phone number must be unique</div>
                </div>
                <div class="d-flex align-items-start mb-2">
                    <i class="bi bi-envelope text-success me-2 mt-1"></i>
                    <div class="small">Email is optional but recommended</div>
                </div>
                <div class="d-flex align-items-start mb-2">
                    <i class="bi bi-geo-alt text-success me-2 mt-1"></i>
                    <div class="small">Address helps with billing accuracy</div>
                </div>
                <div class="d-flex align-items-start">
                    <i class="bi bi-bell text-success me-2 mt-1"></i>
                    <div class="small">Inactive customers won't receive notifications</div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.form-control-sm {
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
}

.form-label {
    margin-bottom: 0.25rem;
}

.card {
    transition: transform 0.2s ease-in-out;
}

.card:hover {
    transform: translateY(-1px);
}

.alert-sm {
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Auto-format phone number
            $('#Phone').on('input', function() {
                let value = $(this).val().replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 3) {
                        value = value;
                    } else if (value.length <= 6) {
                        value = value.slice(0, 3) + '-' + value.slice(3);
                    } else {
                        value = value.slice(0, 3) + '-' + value.slice(3, 6) + '-' + value.slice(6, 10);
                    }
                }
                $(this).val(value);
            });
        });
    </script>
} 