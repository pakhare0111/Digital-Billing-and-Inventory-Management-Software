@model Billing_Software.Models.Inventory
@{
    ViewData["Title"] = "Edit Inventory Item";
}

<!-- Compact Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1 fw-bold">
            <i class="bi bi-pencil-square text-info me-2"></i>Edit Inventory Item
        </h4>
        <p class="text-muted small mb-0">Update inventory item information</p>
    </div>
    <div class="btn-group btn-group-sm">
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
            <i class="bi bi-eye me-1"></i>View Details
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-box-seam text-info me-2"></i>Item Information
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-sm" role="alert"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label small fw-medium">Item Name *</label>
                            <input asp-for="Name" class="form-control form-control-sm" placeholder="Enter item name" required>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Category" class="form-label small fw-medium">Category *</label>
                            <select asp-for="Category" class="form-select form-select-sm" required>
                                <option value="">Select Category</option>
                                <option value="Parts" selected="@(Model.Category == "Parts")">Parts</option>
                                <option value="Tools" selected="@(Model.Category == "Tools")">Tools</option>
                                <option value="Supplies" selected="@(Model.Category == "Supplies")">Supplies</option>
                                <option value="Accessories" selected="@(Model.Category == "Accessories")">Accessories</option>
                                <option value="Lubricants" selected="@(Model.Category == "Lubricants")">Lubricants</option>
                                <option value="Electronics" selected="@(Model.Category == "Electronics")">Electronics</option>
                                <option value="Safety" selected="@(Model.Category == "Safety")">Safety Equipment</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label small fw-medium">Price *</label>
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" type="number" step="0.01" class="form-control form-control-sm" placeholder="0.00" required>
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Quantity" class="form-label small fw-medium">Current Stock *</label>
                            <input asp-for="Quantity" type="number" class="form-control form-control-sm" placeholder="0" required>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="MinStockLevel" class="form-label small fw-medium">Minimum Stock Level</label>
                            <input asp-for="MinStockLevel" type="number" class="form-control form-control-sm" placeholder="5">
                            <span asp-validation-for="MinStockLevel" class="text-danger small"></span>
                            <small class="text-muted">Alert when stock falls below this level</small>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Unit" class="form-label small fw-medium">Unit</label>
                            <select asp-for="Unit" class="form-select form-select-sm">
                                <option value="">Select Unit</option>
                                <option value="Piece" selected="@(Model.Unit == "Piece")">Piece</option>
                                <option value="Box" selected="@(Model.Unit == "Box")">Box</option>
                                <option value="Pack" selected="@(Model.Unit == "Pack")">Pack</option>
                                <option value="Liter" selected="@(Model.Unit == "Liter")">Liter</option>
                                <option value="Kilogram" selected="@(Model.Unit == "Kilogram")">Kilogram</option>
                                <option value="Meter" selected="@(Model.Unit == "Meter")">Meter</option>
                                <option value="Set" selected="@(Model.Unit == "Set")">Set</option>
                            </select>
                            <span asp-validation-for="Unit" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row g-3 mt-2">
                        <div class="col-md-6">
                            <label asp-for="SKU" class="form-label small fw-medium">SKU</label>
                            <input asp-for="SKU" class="form-control form-control-sm" placeholder="Stock Keeping Unit">
                            <span asp-validation-for="SKU" class="text-danger small"></span>
                            <small class="text-muted">Unique identifier for the item</small>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Supplier" class="form-label small fw-medium">Supplier</label>
                            <input asp-for="Supplier" class="form-control form-control-sm" placeholder="Supplier name">
                            <span asp-validation-for="Supplier" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label asp-for="Description" class="form-label small fw-medium">Description</label>
                        <textarea asp-for="Description" class="form-control form-control-sm" rows="3" 
                                  placeholder="Detailed description of the item"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="mt-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox">
                            <label asp-for="IsActive" class="form-check-label small">
                                Active Item
                            </label>
                        </div>
                        <small class="text-muted">Inactive items won't appear in invoices</small>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-x-circle me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="bi bi-check-circle me-1"></i>Update Item
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-info-circle text-info me-2"></i>Current Information
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <label class="form-label small fw-medium text-muted">Name</label>
                    <div class="fw-bold">@Model.Name</div>
                </div>
                <div class="mb-2">
                    <label class="form-label small fw-medium text-muted">Category</label>
                    <div><span class="badge bg-info rounded-pill small">@Model.Category</span></div>
                </div>
                <div class="mb-2">
                    <label class="form-label small fw-medium text-muted">Current Stock</label>
                    <div class="@(Model.Quantity == 0 ? "text-danger" : Model.Quantity <= Model.MinStockLevel ? "text-warning" : "text-success")">
                        @Model.Quantity @(Model.Unit ?? "units")
                    </div>
                </div>
                <div class="mb-2">
                    <label class="form-label small fw-medium text-muted">Price</label>
                    <div class="fw-bold">@Model.Price.ToString("0.00")</div>
                </div>
                <div class="mb-2">
                    <label class="form-label small fw-medium text-muted">Total Value</label>
                    <div class="fw-bold text-info">@((Model.Price * Model.Quantity).ToString("0.00"))</div>
                </div>
                <div class="mb-2">
                    <label class="form-label small fw-medium text-muted">Created</label>
                    <div class="small">@Model.CreatedDate.ToString("MMM dd, yyyy")</div>
                </div>
                <div class="mb-2">
                    <label class="form-label small fw-medium text-muted">Last Updated</label>
                    <div class="small">@Model.LastUpdated?.ToString("MMM dd, yyyy")</div>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-exclamation-triangle text-info me-2"></i>Stock Alerts
                </h6>
            </div>
            <div class="card-body">
                @if (Model.Quantity == 0)
                {
                    <div class="alert alert-danger alert-sm">
                        <small>
                            <strong>Out of Stock:</strong> This item is currently out of stock.
                        </small>
                    </div>
                }
                else if (Model.Quantity <= Model.MinStockLevel)
                {
                    <div class="alert alert-warning alert-sm">
                        <small>
                            <strong>Low Stock:</strong> Stock level is below minimum threshold.
                        </small>
                    </div>
                }
                else
                {
                    <div class="alert alert-success alert-sm">
                        <small>
                            <strong>Stock Level Good:</strong> Stock level is above minimum threshold.
                        </small>
                    </div>
                }
            </div>
        </div>

        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-lightbulb text-info me-2"></i>Tips
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small mb-0">
                    <li class="mb-2 d-flex align-items-start">
                        <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                        <small>Update stock levels regularly</small>
                    </li>
                    <li class="mb-2 d-flex align-items-start">
                        <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                        <small>Set appropriate minimum levels</small>
                    </li>
                    <li class="mb-2 d-flex align-items-start">
                        <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                        <small>Keep supplier information updated</small>
                    </li>
                    <li class="mb-2 d-flex align-items-start">
                        <i class="bi bi-check-circle text-success me-2 mt-1"></i>
                        <small>Use descriptive names and SKUs</small>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .card { transition: transform 0.2s ease-in-out; }
        .card:hover { transform: translateY(-1px); }
        .alert-sm { padding: 0.5rem 0.75rem; font-size: 0.875rem; }
        .btn-sm { padding: 0.375rem 0.75rem; font-size: 0.875rem; }
        .form-control-sm, .form-select-sm { padding: 0.375rem 0.75rem; font-size: 0.875rem; }
        .input-group-sm > .form-control, .input-group-sm > .form-select, .input-group-sm > .input-group-text { padding: 0.375rem 0.75rem; font-size: 0.875rem; }
        .badge { font-size: 0.75rem; font-weight: 500; }
    </style>
} 