@model Billing_Software.Models.JobList
@{
    ViewData["Title"] = "Delete Job";
}

<!-- Compact Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1 fw-bold">
            <i class="bi bi-trash text-danger me-2"></i>Delete Job
        </h4>
        <p class="text-muted small mb-0">Are you sure you want to delete this job?</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Back to List
    </a>
</div>

<div class="card border-0 shadow-sm border-danger">
    <div class="card-header bg-transparent border-0 pb-0">
        <h6 class="mb-0 fw-bold text-danger">
            <i class="bi bi-exclamation-triangle text-danger me-2"></i>Warning
        </h6>
    </div>
    <div class="card-body">
        <div class="alert alert-danger alert-sm">
            <div class="d-flex align-items-start">
                <i class="bi bi-exclamation-triangle me-2 mt-1"></i>
                <div>
                    <strong>This action cannot be undone.</strong>
                    <div class="small">This will permanently delete the job and all associated data.</div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label small fw-medium">Job Name</label>
                    <p class="mb-0 fw-bold">@Model.JobName</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label small fw-medium">Price</label>
                    <p class="mb-0 fw-bold text-success">@Model.Price.ToString("0.00")</p>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label small fw-medium">Created Date</label>
                    <p class="mb-0">@Model.CreatedDate.ToString("MMM dd, yyyy")</p>
                </div>
                
                @if (Model.LastModified.HasValue)
                {
                    <div class="mb-3">
                        <label class="form-label small fw-medium">Last Modified</label>
                        <p class="mb-0">@Model.LastModified.Value.ToString("MMM dd, yyyy")</p>
                    </div>
                }
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <hr class="my-3">
            <div class="mb-3">
                <label class="form-label small fw-medium">Description</label>
                <p class="mb-0">@Model.Description</p>
            </div>
        }
        
        <hr class="my-3">
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash me-1"></i>Delete Job
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .card { transition: transform 0.2s ease-in-out; }
    .card:hover { transform: translateY(-1px); }
    .btn-sm { padding: 0.375rem 0.75rem; font-size: 0.875rem; }
    .alert-sm { padding: 0.5rem 0.75rem; font-size: 0.875rem; }
</style> 