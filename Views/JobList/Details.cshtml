@model Billing_Software.Models.JobList
@{
    ViewData["Title"] = "Job Details";
}

<!-- Compact Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1 fw-bold">
            <i class="bi bi-clipboard-data text-info me-2"></i>Job Details
        </h4>
        <p class="text-muted small mb-0">Job #@Model.Id</p>
    </div>
    <div class="btn-group btn-group-sm" role="group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">
            <i class="bi bi-trash me-1"></i>Delete
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-clipboard-data text-info me-2"></i>Job Information
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label small fw-medium">Job Name</label>
                            <p class="mb-0 fw-bold">@Model.JobName</p>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label small fw-medium">Price</label>
                            <p class="mb-0 fw-bold text-success">@Model.Price.ToString("0.00")</p>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label small fw-medium">Created Date</label>
                            <p class="mb-0">@Model.CreatedDate.ToString("MMM dd, yyyy")</p>
                        </div>
                        
                        @if (Model.LastModified.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label small fw-medium">Last Modified</label>
                                <p class="mb-0">@Model.LastModified.Value.ToString("MMM dd, yyyy")</p>
                            </div>
                        }
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr class="my-3">
                    <div class="mb-3">
                        <label class="form-label small fw-medium">Description</label>
                        <p class="mb-0">@Model.Description</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-info-circle text-info me-2"></i>Job Summary
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label small fw-medium">Job ID</label>
                    <p class="mb-0">#@Model.Id</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label small fw-medium">Status</label>
                    <div>
                        <span class="badge bg-success rounded-pill small">Active</span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label small fw-medium">Type</label>
                    <p class="mb-0">Master Job</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card { transition: transform 0.2s ease-in-out; }
    .card:hover { transform: translateY(-1px); }
    .btn-sm { padding: 0.375rem 0.75rem; font-size: 0.875rem; }
    .badge { font-size: 0.75rem; font-weight: 500; }
</style> 