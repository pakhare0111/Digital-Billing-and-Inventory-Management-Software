@model Billing_Software.Models.ReportViewModel
@{
    ViewData["Title"] = "Reports & Analytics";
}

<!-- Compact Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1 fw-bold">
            <i class="bi bi-graph-up text-info me-2"></i>Reports & Analytics
        </h4>
        <p class="text-muted small mb-0">Comprehensive business insights and performance metrics</p>
    </div>
    <div class="btn-group btn-group-sm" role="group">
        <a asp-action="Revenue" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-graph-up me-1"></i>Revenue Report
        </a>
        <a asp-action="Customer" class="btn btn-outline-success btn-sm">
            <i class="bi bi-people me-1"></i>Customer Report
        </a>
        <a asp-action="Inventory" class="btn btn-outline-warning btn-sm">
            <i class="bi bi-boxes me-1"></i>Inventory Report
        </a>
        <a asp-action="Service" class="btn btn-outline-info btn-sm">
            <i class="bi bi-tools me-1"></i>Service Report
        </a>
    </div>
</div>

<!-- Key Metrics -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-currency-dollar text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Total Revenue</div>
                        <div class="h5 mb-1 fw-bold">@Model.TotalRevenue.ToString("0.00")</div>
                        <div class="small text-success">
                            <i class="bi bi-arrow-up me-1"></i>From all invoices
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-file-earmark-text text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Total Invoices</div>
                        <div class="h5 mb-1 fw-bold">@Model.TotalInvoices</div>
                        <div class="small text-success">
                            <i class="bi bi-arrow-up me-1"></i>Generated
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-people text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Total Customers</div>
                        <div class="h5 mb-1 fw-bold">@Model.TotalCustomers</div>
                        <div class="small text-success">
                            <i class="bi bi-arrow-up me-1"></i>Registered
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-tools text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Total Services</div>
                        <div class="h5 mb-1 fw-bold">@Model.TotalServices</div>
                        <div class="small text-success">
                            <i class="bi bi-arrow-up me-1"></i>Performed
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Metrics -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-calculator text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Average Invoice</div>
                        <div class="h5 mb-1 fw-bold">@Model.AverageInvoiceValue.ToString("0.00")</div>
                        <div class="small text-success">
                            <i class="bi bi-arrow-up me-1"></i>Per invoice
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-exclamation-triangle text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Low Stock Items</div>
                        <div class="h5 mb-1 fw-bold">@Model.LowStockItems</div>
                        <div class="small text-danger">
                            <i class="bi bi-arrow-down me-1"></i>Need attention
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-boxes text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Inventory Value</div>
                        <div class="h5 mb-1 fw-bold">@Model.InventoryValue.ToString("0.00")</div>
                        <div class="small text-success">
                            <i class="bi bi-arrow-up me-1"></i>Total stock value
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                        <i class="bi bi-pie-chart text-info fs-4"></i>
                    </div>
                    <div>
                        <div class="small text-muted fw-medium">Reports Available</div>
                        <div class="h5 mb-1 fw-bold">4</div>
                        <div class="small text-success">
                            <i class="bi bi-arrow-up me-1"></i>Different types
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Reports -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-lightning text-info me-2"></i>Quick Reports
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a asp-action="Revenue" class="btn btn-primary btn-sm w-100">
                            <i class="bi bi-graph-up me-1"></i>Revenue Analysis
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Customer" class="btn btn-success btn-sm w-100">
                            <i class="bi bi-people me-1"></i>Customer Analytics
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Inventory" class="btn btn-warning btn-sm w-100">
                            <i class="bi bi-boxes me-1"></i>Inventory Report
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Service" class="btn btn-info btn-sm w-100">
                            <i class="bi bi-tools me-1"></i>Service Analytics
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Top Customers and Recent Invoices -->
<div class="row mb-4">
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-trophy text-warning me-2"></i>Top Customers
                    </h6>
                    <a asp-action="Customer" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.TopCustomers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Customer</th>
                                    <th>Total Spent</th>
                                    <th>Invoices</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.TopCustomers)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Customer" asp-action="Details" asp-route-id="@customer.Id">
                                                @customer.Name
                                            </a>
                                            <br><small class="text-muted">@customer.Phone</small>
                                        </td>
                                        <td>
                                            <strong>@customer.Invoices.Sum(i => i.Total).ToString("0.00")</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary rounded-pill small">@customer.Invoices.Count()</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-people display-4 mb-3"></i>
                        <p class="small">No customer data available</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Invoices -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold">
                        <i class="bi bi-file-earmark-text text-primary me-2"></i>Recent Invoices
                    </h6>
                    <a asp-controller="Invoice" asp-action="Index" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
            </div>
            <div class="card-body">
                @if (Model.RecentInvoices.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Invoice #</th>
                                    <th>Customer</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in Model.RecentInvoices)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Invoice" asp-action="Details" asp-route-id="@invoice.Id">
                                                @invoice.InvoiceNumber
                                            </a>
                                        </td>
                                        <td>@invoice.Customer?.Name</td>
                                        <td>
                                            <strong>@invoice.Total.ToString("0.00")</strong>
                                        </td>
                                        <td>
                                            @{
                                                var statusClass = invoice.Status.ToString().ToLower() switch
                                                {
                                                    "paid" => "bg-success",
                                                    "pending" => "bg-warning",
                                                    "overdue" => "bg-danger",
                                                    "cancelled" => "bg-secondary",
                                                    _ => "bg-primary"
                                                };
                                            }
                                            <span class="badge @statusClass rounded-pill small">@invoice.Status</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-file-earmark-text display-4 mb-3"></i>
                        <p class="small">No recent invoices</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Export Options -->
<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pb-0">
                <h6 class="mb-0 fw-bold">
                    <i class="bi bi-download text-success me-2"></i>Export Options
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a href="#" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-file-earmark-pdf me-1"></i>Export as PDF
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="#" class="btn btn-outline-success btn-sm w-100">
                            <i class="bi bi-file-earmark-excel me-1"></i>Export as Excel
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="#" class="btn btn-outline-info btn-sm w-100">
                            <i class="bi bi-file-earmark-text me-1"></i>Export as CSV
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="#" class="btn btn-outline-warning btn-sm w-100">
                            <i class="bi bi-printer me-1"></i>Print Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card { transition: transform 0.2s ease-in-out; }
    .card:hover { transform: translateY(-1px); }
    .btn-sm { padding: 0.375rem 0.75rem; font-size: 0.875rem; }
    .badge { font-size: 0.75rem; font-weight: 500; }
    .table th { font-weight: 600; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.5px; }
    .table td { font-size: 0.875rem; }
</style> 